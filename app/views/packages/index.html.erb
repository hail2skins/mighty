<%= provide(:title, "Package list for " + @business.name) %>

<h2>Package list for <%= @business.name %></h2>

<table>
  <thead>
    <tr>
      <th>Package Name</th>
      <th>Description</th>
      <th>Package Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= link_to package.name, '#' %></td>
        <td><%= package.description %></td>
        <td><%= package.count %></td>
        <td><%= link_to 'Show', '#' %></td>
        <td><%= link_to 'Edit', '#' %></td>
        <td><%= link_to 'Destroy', '#' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
    <%= link_to "Return to main business page", [@owner, @business] %>