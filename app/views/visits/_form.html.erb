<%= form_for([@customer, @visit]) do |f| %>
    <% if @visit.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@visit.errors.count, "error") %> prohibited this visit from being saved:</h2>

          <ul>
            <% @visit.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
        <%= f.label :visit_notes %><br />
        <%= f.text_area :visit_notes %>
    </div>

    <div class="field">
        <%= f.label :date_of_visit %><br />
        <%= f.date_select :date_of_visit, order: [:month, :day, :year] %>
    </div>
    
    <% if @customer.deals.where(active: true).count == 0 %>
    <div class="field">
        <%= f.label :deal_visit, "Is this a special deal visit?" %>
        <% if @visit.deal_visit == true %>
            <%= f.check_box :deal_visit, checked: true %>
        <% else %>  
            <%= f.check_box :deal_visit, checked: false %>
        <% end %>
 
    </div>
    <% elsif @visit.deal_visit == true %>
    <div class="field">
        <%= f.label :deal_visit, "Is this a special deal visit?" %>
        <%= f.check_box :deal_visit, checked: true %>
    </div>
    <% end %>
    
    <div class="actions">
      <%= f.submit %>
    </div>

<% end %>
